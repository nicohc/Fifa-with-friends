<h1>Ajouter un nouveau Club</h1>

<%= form_for(@club) do |c| %>

  <%= c.label :"Nom du club" %>
  <%= c.text_field :name, class: 'form-control'%>
  <br><br>
  <%= c.label :"Déterminant (le / la / les)si nécéssaire" %>
  <%= c.text_field :denominateur, class: 'form-control'%>
  <br><br>
  <%= c.label :"Image victorieuse du club" %>
  (chemin url):
  <%= c.text_field :image_url, placeholder: "clubs/", class: 'form-control'%>
  <br><br>
  <%= c.submit "Valider", class: "btn btn-primary" %>
<% end %>
